<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome3"
    tools:context=".MainActivity_new1">

<ImageView
    android:id="@+id/app_logo"
    android:layout_width="300dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="100dp"
    android:src="@drawable/applogo"
    />

<TextView
    android:layout_width="150dp"
    android:layout_height="52dp"
    android:layout_marginTop="220dp"
    android:layout_marginLeft="120dp"
    android:text="Discover your goods in right place "
    android:textAlignment="center"
    android:textSize="20dp"
    android:fontFamily="@font/boogaloo"
    />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="620dp"
        android:background="#FF8B00"
        android:fontFamily="@font/boogaloo"
        android:gravity="center"
        android:text="If you have a account ? Log in"
        android:textSize="20sp" />

    <Button
        android:id="@+id/main_join_btn"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="555dp"
        android:background="#FF8B00"
        android:fontFamily="@font/boogaloo"
        android:gravity="center"
        android:text="Join with us"
        android:textSize="20sp" />





</RelativeLayout>

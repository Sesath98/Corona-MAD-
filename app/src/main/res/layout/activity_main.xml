<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#9FFFEB3B"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="36dp"
            android:layout_height="50dp"
            android:layout_marginTop="55dp"
            app:srcCompat="@drawable/ic_baseline_menu_24" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="36dp"
            android:layout_height="50dp"
            android:layout_marginStart="370dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/ic_bell" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/boogaloo"
            android:text="Good morning"
            android:textColor="#000000"
            android:textSize="36sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:fontFamily="@font/boogaloo"
            android:text="Vito morgan"
            android:textColor="#000000"
            android:textSize="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:width="10dp"
            android:fontFamily="@font/boogaloo"
            android:text="Select a shop"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textDirection="locale"
            android:textSize="50dp" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:checked="true"
            android:fontFamily="@font/boogaloo"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="@string/Keels"
            android:textColor="#000"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/boogaloo"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/boogaloo"
            android:text="@string/laugh"
            android:textColor="#000"
            android:textSize="30dp" />


        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-202dp"
            android:fontFamily="@font/boogaloo"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/boogaloo"
            android:text="@string/food_city"
            android:textColor="#000"
            android:textSize="30dp" />


        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/boogaloo"
            android:text="@string/foodcorner"
            android:textColor="#000"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="-200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/boogaloo"
            android:text="@string/Jayakody"
            android:textColor="#000"
            android:textSize="30dp" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="360dp"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:fontFamily="@font/boogaloo"
            android:text="@string/sunyside"
            android:textColor="#000"
            android:textSize="30dp" />
    </LinearLayout>
</ScrollView>